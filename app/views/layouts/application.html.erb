<!DOCTYPE html>
<html>
  <head>
    <title>HomeBrewsRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <div class="topnav">
      <a class="active" href=<%=root_path%> >Home</a>
      <% if logged_in? %>
        <a href=<%=user_path(current_user)%>>User Homepage</a>
        <a href=<%=logout_path %>>Log Out</a>
      <% end%>
      <% if !logged_in? %>
       <a href= <%=login_path%> > Log In</a>
       <a href= <%=new_user_path%>>Create New User</a>
      <% end %>
    </div>
  </head>

  <body>
    <% if flash[:message] %>
     <div class="message"><%= flash[:message] %></div>
     <br><br>
    <% end %>
    <%= yield %>
  </body>
</html>
